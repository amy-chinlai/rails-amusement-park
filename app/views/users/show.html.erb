<h1><%= @user.name %></h1>
<% if flash[:message] %>
    <p><%= flash[:message] %></p>
<% end %>
<% if !@user.admin %>
    <p>Mood: <%= @user.mood %> </p>
    <p>Tickets: <%= @user.tickets %></p>
    <p>Height: <%= @user.height %></p>
<% else %>
    <p>ADMIN</p>
<% end %>

<%= link_to "Log Out", @user, method: :delete %><br>
<%= link_to "See attractions", attractions_path %><br>
